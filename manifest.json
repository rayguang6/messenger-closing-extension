{
    "manifest_version": 3,
    "name": "Facebook Chat AI Assistant",
    "version": "0.1.0",
    "description": "AI-powered conversation suggestions for Facebook Chat",
    
    "permissions": [
      "activeTab"
    ],
    
    "host_permissions": [
      "https://*.facebook.com/*",
      "https://*.messenger.com/*",
      "https://api.deepseek.com/*"
    ],
    
    "content_scripts": [
      {
        "matches": [
          "https://*.facebook.com/*",
          "https://*.messenger.com/*"
        ],
        "js": ["guide.js", "content.js"],
        "run_at": "document_idle"
      }
    ],
    
    "action": {
      "default_title": "Facebook Chat AI Assistant",
      "default_popup": "popup.html"
    }
  }